<div class="page-block margin-bottom-small">
  <h4 class="thin-type-header">Last Five Appearances</h4>
  <div class="last-five-starts-wrapper">
    <div class="last-five-lines">
      <% @last_five_lines.each do |line| %>
        <div>
          <span class="game-line">
            <%= matchup_label(line) %>
          </span>
          <span class="<%= style_pitch_count_warning(line) %>">
            <%= line.stats['number_of_pitches'] %>
          </span>
          <b>pitches</b>
        </div>
      <% end %>

      <br>

      <div class="health-risk-scale desc">
        Health Risk Scale:
        <span class="low-risk">Low</span>,
        <span class="medium-risk"">Medium</span>,
        <span class="high-risk">High</span>
      </div>

    </div>
    <div class="last-five-quick-stats">
      <div class="info-container">
        <span class="highlight"><%= @number_of_pitches %></span>
        <span class="desc-text thin-type-header">Total Pitches</span>
        <br>
        <span class="highlight"><%= @avg_pitch_count %></span>
        <span class="desc-text thin-type-header">Pitches / Appearance</span>
      </div>
    </div>
  </div>
</div>
